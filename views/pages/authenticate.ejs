<%- include('../partials/head.ejs'); %>
<div class="container py-3">
    <div class="row">
        <div class="col-md-12">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <span class="anchor" id="formLogin"></span>
                    <%if (pageName === 'login') {%>
                    <div class="card card-outline-secondary">
                        <div class="card-header">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">
                            <form autocomplete="off" class="form" id="formLogin" name="formLogin" role="form">
                                <div class="form-group">
                                    <label for="login-username">Username</label>
                                    <input class="form-control" id="login-username" name="login-username" required=""
                                        type="text">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input autocomplete="new-password" class="form-control" id="login-password"
                                        name="login-password" required="" type="password">
                                </div>
                                <button class="btn btn-success btn-lg float-right" type="button"
                                    onclick="login()">Login</button>
                            </form>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="card card-outline-secondary">
                        <div class="card-header">
                            <h3 class="mb-0">User Registration</h3>
                        </div>
                        <div class="card-body">
                            <form autocomplete="off" class="form" id="formLogin" name="formLogin" role="form">
                                <div class="form-group">
                                    <label for="reg-username">Username</label>
                                    <input class="form-control" id="reg-username" name="reg-username" required
                                        type="text">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input autocomplete="new-password" class="form-control" id="reg-password"
                                        name="reg-password" required type="password">
                                </div>
                                <button class="btn btn-success btn-lg float-right" type="button"
                                    onclick="signup()">SignUp</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->

<%- include('../partials/footer.ejs'); %>
